{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "packages/lib/CHANGELOG.md"
    },
    "@release-it/bumper": {
      "in": "packages/lib/package.json",
      "out": "packages/lib/package.json"
    }
  },
  "github": {
    "release": true
  },
  "git": {
    "commitMessage": "[skip-ci] v${version}",
    "tagAnnotation": "[skip-ci] v${version}",
    "tagName": "v${version}"
  },
  "npm": {
    "publish": false
  }
}
